page{
  font-family: Arial;
}
.home-swiper,.home-swiper-image{
  height: 180px;
  background-color: #eeeeee;
}
.home-addr-view{
  text-align: left;
  border-top: 1px solid #eeeeee;
  padding-top:10px;
}
.home-addr{
  color:#000000;
  background-color:transparent;
  width: 40%;
  text-align: center;
  display: inline-block;
  height: 40px;
  line-height: 40px;
  border: 1px solid #cccccc;
  border-radius: 5px;
}
.home-left{
  margin-left:10px;
  font-size: 14px;
}
.home-search-btn{
  border-radius: 10px;
  background-color: #eeeeee;
  font-size: 14px;
  color: #aaaaaa;
  height: 40px;
  line-height: 40px;
  text-align: center;
  width: 50%;
  float: right;
}
.home-news-t{
  width: 100%;
  height:30px;
  line-height: 30px;
  border-bottom: 1px solid #cccccc;
  text-align: center;
  font-weight: bold;
}
.taskTitle{
  margin:0px 3px;
  font-size: 14px;
  height: 30px;
  line-height: 30px;
}
.taskTitle-active{
  font-size: 16px;
}
.home-item-btn{
  /* display: inline-block; */
  border: 1px solid #eeeeee;
  border-radius:5px; 
  float: left;
  padding: 0 10px;
  line-height: 30px;
  font-size:12px;
  color: #666666; 
  margin: 10px 5px;
}
.btn-active{
  border: 1px #fc0000 solid;
  color: #fc0000; 
}
.home-news-item{
  clear: both;
  border-bottom: 1px solid #cccccc;
  padding:10px;
}
.home-news-title{
  text-align: left;
  line-height: 30px;
  height: auto;
  font-size: 16px;
  display: block;
}
.home-news-btn{
  width:50px;
  line-height: 20px;
  height: 20px;
  font-size: 10px;
  color: #fc0000;
  border: 1px solid #fc0000;
  padding:2px;
  border-radius: 5px;
}
.home-news-source,.home-news-pinglun,.home-news-view{
  color:#aaaaaa;
  font-size:12px; 
  margin-left:10px;
  line-height: 20px;
  height: 20px;
}